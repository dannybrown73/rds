<h2>Metadata</h2>
<dl>
    <dt>Version</dt>
    <dd>{{ page.meta.version }}</dd>
    {# Status - Ready, Under Review, Deprecated, Unavailable #}
    <dt>Status</dt>
    <dd>{% if page.meta.status == "Under review" %}
            <span class="u-icon--text u-icon--orange">{% include "icons/alert.svg" ignore missing %}Under review</span>
        {% elseif page.meta.status == "ready" %}
            <span class="u-icon--text u-icon--left u-center-vert u-icon--green">{% include "icons/check-mark.svg" ignore missing %}Ready</span>
        {% else %}
        <span class="u-icon--text u-icon--left u-center-vert u-icon--active">{% include "icons/expired.svg" ignore missing %}Deprecated</span>
        {% endif %}
    </dd>
    <dt>Theme</dt>
    <dd>{{ page.meta.theme }}</dd>
    {# slug #}
    <dt>Handle</dt>
    <dd>@{{ page.meta.handle }}</dd>
    {# Block type #}
    <dt>Type</dt>
    <dd>{{ page.meta.type }}</dd>
    {# Block path #}
    <dt>Path</dt>
    <dd>{{ page.meta.path }}</dd>
    {# Available in what themes #}
    <dt>Fixed or Full</dt>
    <dd>{{ page.meta.ff }}</dd>
    <dt>Available Widths</dt>
    <dd>{{ page.meta.widths }}</dd>
    <dt>Heading available</dt>
    <dd>{{ page.meta.heading }}</dd>
    <dt>Restricted to</dt>
    <dd>{{ page.meta.restricted }}</dd>
    {# First create in #}
</dl>
<h2>Dependencies</h2>
<dl>
    <dt>JavaScript</dt>
    <dd>{{ page.dependencies.js }}</dd>
</dl>
<h2>Contexts</h2>
<dl>
    {# Context variants #}
    <dt>Variants {% if page.context|length %}({{ page.context|length }}){% endif %}</dt>
    <dd>{% if page.context|length %}
            {% for item in page.context -%}
                {% if not loop.last %}
                    <a href="#{{ item.name }}">{{ item.name|capitalize }}</a>,
                {% else %}
                    <a href="#{{ item.name }}">{{ item.name|capitalize }}</a>
                {% endif %}
            {% endfor %}
        {% else %}
            N/A
        {% endif %}
    </dd>
    {# stylesheet modifiers #}
</dl>
<h2>Examples</h2>
<dl>
    <dt>Preview</dt>
    <dd>{{ page.examples.preview }}</dd>
    <dt>Examples with:</dt>
    <dd>{% for item in page.examples %}
            {% if not loop.last %}
                <a href="#{{ item.name }}">{{ item.name }}</a>,
            {% else %}
                <a href="#{{ item.name }}">{{ item.name }}</a>
            {% endif %}
        {%  endfor %}</dd>
    <dt>In the wild</dt>
    <dd>{{ page.wild }}</dd>
    <dt>Alternatives</dt>
    <dd><a href="/docs/{{ page.meta.path }}{{ page.alternatives }}/">{{ page.alternatives }}</a></dd>
</dl>
