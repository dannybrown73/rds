{% macro grid(settings, data, heading) %}
<div class="b-listing-grid u-block{% if settings.width|length %} u-block--{{ settings.width }}{% endif %}">
    <ul class="u-grid{% if settings.columns|length %} u-grid--{{ settings.columns }}{% endif %}">
{% for item in data %}
        <li>
{% include item.inc %}
        </li>
{% endfor %}
    </ul>
</div>
{% endmacro %}
